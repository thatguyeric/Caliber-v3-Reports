<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" controller="ReportsController" >
    <ltng:require styles="{!join(',',
                          $Resource.revStyling, $Resource.bootstrapCSS)}"
                  scripts="{!join(',',
                           $Resource.jQuery, $Resource.bootstrapJS)}"/>
    <aura:attribute name="name" type="Object"/>
    
    <div class="modal fade" id="editUser" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">{!name}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    
</aura:component>